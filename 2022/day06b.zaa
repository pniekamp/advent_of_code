import std.stdio;
import std.algorithm;
import std.scan;

fn main -> int
{
  try
  {
    var i = 14;

    var input = std::readfile("day06.txt");

    for ( ; i < input.len; ++i)
    {
      var message = 0;

      for (var ch : input[i-14 .. i])
        message |= 1 << (ch - 65);

      if (std::popcnt(message) == 14)
        break;
    }

    std::print("part2: first start-of-message ", i);

  }
  catch(std::error e)
  {
    std::panic(e);
  }

  return 0;
}
